@page
@model AlexToFood.Pages.Restaurants.ListModel
@{
}

<h1>Restaurants</h1>

<form method="get">
    <div class="form-group">
        <div class="input-group">
            <input type="search" class="form-control" value="" name="searchTerm"/>
            <button class="btn btn-primary">
                <span>
                    <i class="glyphicon glyphicon-search"></i>
                </span>
            </button>
        </div>
    </div>
</form>

<table class="table">
    @foreach(var restaurant in Model.Restaurants)
    {
        <tr>
            <td>@restaurant.Name</td>
            <td>@restaurant.Location</td>
            <td>@restaurant.Cuisine</td>
            <td>
                <a class="btn btn-primary" asp-page="./Detail" asp-route-restaurantId="@restaurant.Id">Detail</a>
                <a class="btn btn-primary" asp-page="./Edit" asp-route-restaurantId="@restaurant.Id">Detail</a>
            </td>
        </tr>
    }
</table>

<div>
    @Model.Message
</div>

